<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:elevation="10dp"
    android:background="@drawable/popup_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp">
        <EditText
            android:id="@+id/popUpSchedule_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:lineSpacingExtra="4sp"
            android:hint="00"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#646464"
            android:lineSpacingExtra="4sp"
            android:text="시  "/>
        <EditText
            android:id="@+id/popUpSchedule_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:lineSpacingExtra="4sp"
            android:hint="00"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#646464"
            android:lineSpacingExtra="4sp"
            android:text="분"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/popUpSchedule_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_rounded"
            android:hint="장소"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/popUpSchedule_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_rounded"
            android:hint="메모"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/popUpSchedule_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="확인"
            android:background="@drawable/blue_round"
            android:padding="3dp"
            android:textColor="#45a4ce">
        </TextView>
    </LinearLayout>
</LinearLayout>